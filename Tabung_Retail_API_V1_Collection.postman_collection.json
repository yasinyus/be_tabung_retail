{
  "info": {
    "name": "Tabung Retail API v1 - No Role Login",
    "description": "API Collection untuk testing endpoint baru /api/v1/auth/login tanpa role parameter",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://test.gasalamsolusi.my.id/api",
      "type": "string"
    },
    {
      "key": "v1_url",
      "value": "https://test.gasalamsolusi.my.id/api/v1",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üÜï API v1 - Universal Login (No Role)",
      "item": [
        {
          "name": "üîì Test API v1",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/test",
              "host": ["{{base_url}}"],
              "path": ["test"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('API v1 test endpoint accessible', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains message', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.message).to.exist;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "üîê V1 Login - Driver (No Role)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"driver@gmail.com\",\n  \"password\": \"password\"\n}"
            },
            "url": {
              "raw": "{{v1_url}}/auth/login",
              "host": ["{{v1_url}}"],
              "path": ["auth", "login"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.environment.set('token', response.token);",
                  "        pm.test('Token saved successfully', function () {",
                  "            pm.expect(response.token).to.not.be.empty;",
                  "        });",
                  "        ",
                  "        pm.test('Role auto-detected for driver', function () {",
                  "            pm.expect(response.user.role).to.exist;",
                  "            pm.expect(response.user.role).to.equal('driver');",
                  "        });",
                  "        ",
                  "        pm.test('User type is staff', function () {",
                  "            pm.expect(response.user_type).to.equal('staff');",
                  "        });",
                  "    }",
                  "}",
                  "",
                  "pm.test('V1 Login successful', function () {",
                  "    pm.response.to.have.status(200);",
                  "    pm.expect(pm.response.json().status).to.equal('success');",
                  "});",
                  "",
                  "pm.test('User info returned', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.user).to.exist;",
                  "    pm.expect(response.user.name).to.exist;",
                  "    pm.expect(response.user.email).to.exist;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
