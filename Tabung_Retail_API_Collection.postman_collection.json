    {
      "name": "üîí Security Tests",
      "item": [
        {
          "name": "‚ùå Invalid Credentials",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"invalid@email.com\",\n  \"password\": \"wrongpassword\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login-staff",
              "host": ["{{base_url}}"],
              "path": ["login-staff"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Invalid credentials rejected', function () {",
                  "    pm.response.to.have.status.oneOf([401, 422]);",
                  "});",
                  "",
                  "pm.test('Error message returned', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.message).to.exist;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "‚ùå Access Without Token",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/tabung",
              "host": ["{{base_url}}"],
              "path": ["tabung"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Access denied without token', function () {",
                  "    pm.response.to.have.status(401);",
                  "});",
                  "",
                  "pm.test('Unauthenticated message', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.message).to.include('Unauthenticated');",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
