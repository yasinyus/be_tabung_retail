{
  "info": {
    "name": "Tabung Retail API - Simplified (No Role)",
    "description": "API Collection untuk testing Tabung Retail dengan format baru (tanpa role parameter)",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "auth": {
    "type": "bearer",
    "bearer": [
      {
        "key": "token",
        "value": "{{token}}",
        "type": "string"
      }
    ]
  },
  "variable": [
    {
      "key": "base_url",
      "value": "https://test.gasalamsolusi.my.id/api",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "üîì Authentication",
      "item": [
        {
          "name": "Test Public Endpoint",
          "request": {
            "method": "GET",
            "header": [],
            "url": {
              "raw": "{{base_url}}/test",
              "host": ["{{base_url}}"],
              "path": ["test"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "pm.test('Public endpoint accessible', function () {",
                  "    pm.response.to.have.status(200);",
                  "});",
                  "",
                  "pm.test('Response contains message', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.message).to.exist;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
        {
          "name": "üîê Login Staff - Kepala Gudang (No Role)",
          "request": {
            "method": "POST",
            "header": [
              {
                "key": "Content-Type",
                "value": "application/json",
                "type": "text"
              }
            ],
            "body": {
              "mode": "raw",
              "raw": "{\n  \"email\": \"kepala_gudang@tabungretail.com\",\n  \"password\": \"admin123\"\n}"
            },
            "url": {
              "raw": "{{base_url}}/login-staff",
              "host": ["{{base_url}}"],
              "path": ["login-staff"]
            }
          },
          "event": [
            {
              "listen": "test",
              "script": {
                "exec": [
                  "if (pm.response.code === 200) {",
                  "    const response = pm.response.json();",
                  "    if (response.token) {",
                  "        pm.environment.set('token', response.token);",
                  "        pm.test('Token saved successfully', function () {",
                  "            pm.expect(response.token).to.not.be.empty;",
                  "        });",
                  "        ",
                  "        pm.test('Role auto-detected', function () {",
                  "            pm.expect(response.user.role).to.exist;",
                  "            pm.expect(response.user.role).to.equal('kepala_gudang');",
                  "        });",
                  "    }",
                  "}",
                  "",
                  "pm.test('Login successful', function () {",
                  "    pm.response.to.have.status(200);",
                  "    pm.expect(pm.response.json().status).to.equal('success');",
                  "});",
                  "",
                  "pm.test('User info returned', function () {",
                  "    const response = pm.response.json();",
                  "    pm.expect(response.user).to.exist;",
                  "    pm.expect(response.user.name).to.exist;",
                  "    pm.expect(response.user.email).to.exist;",
                  "});"
                ],
                "type": "text/javascript"
              }
            }
          ]
        },
