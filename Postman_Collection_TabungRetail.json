{
  "info": {
    "name": "API Tabung Retail",
    "description": "API untuk sistem Tabung Retail dengan fitur Terima Tabung Armada",
    "_postman_id": "tabung-retail-api",
    "schema": "https://schema.getpostman.com/json/collection/v2.1.0/collection.json"
  },
  "variable": [
    {
      "key": "base_url",
      "value": "http://192.168.1.7:8000/api/v1",
      "type": "string"
    },
    {
      "key": "token",
      "value": "",
      "type": "string"
    }
  ],
  "item": [
    {
      "name": "1. Test API",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/test",
          "host": ["{{base_url}}"],
          "path": ["test"]
        }
      }
    },
    {
      "name": "2. Login",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"email\": \"gudang@gmail.com\",\n  \"password\": \"gudang\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/auth/login",
          "host": ["{{base_url}}"],
          "path": ["auth", "login"]
        }
      },
      "event": [
        {
          "listen": "test",
          "script": {
            "type": "text/javascript",
            "exec": [
              "if (pm.response.code === 200) {",
              "  var jsonData = pm.response.json();",
              "  if (jsonData.token) {",
              "    pm.collectionVariables.set('token', jsonData.token);",
              "    console.log('Token saved: ' + jsonData.token);",
              "  }",
              "}"
            ]
          }
        }
      ]
    },
    {
      "name": "3. Profile",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/auth/profile",
          "host": ["{{base_url}}"],
          "path": ["auth", "profile"]
        }
      }
    },
    {
      "name": "4. Dashboard",
      "request": {
        "method": "GET",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "url": {
          "raw": "{{base_url}}/mobile/dashboard",
          "host": ["{{base_url}}"],
          "path": ["mobile", "dashboard"]
        }
      }
    },
    {
      "name": "5. Terima Tabung Armada",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"lokasi_qr\": \"GDG-001\",\n  \"armada_qr\": \"ARM-001\",\n  \"tabung_qr\": [\"TBG-001\", \"TBG-002\", \"TBG-003\"],\n  \"keterangan\": \"Test penerimaan tabung dari Postman\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/mobile/terima-tabung",
          "host": ["{{base_url}}"],
          "path": ["mobile", "terima-tabung"]
        }
      }
    },
    {
      "name": "6. Terima Tabung - QR Invalid",
      "request": {
        "method": "POST",
        "header": [
          {
            "key": "Authorization",
            "value": "Bearer {{token}}"
          },
          {
            "key": "Content-Type",
            "value": "application/json"
          },
          {
            "key": "Accept",
            "value": "application/json"
          }
        ],
        "body": {
          "mode": "raw",
          "raw": "{\n  \"lokasi_qr\": \"INVALID-QR\",\n  \"armada_qr\": \"ARM-001\",\n  \"tabung_qr\": [\"TBG-001\"],\n  \"keterangan\": \"Test dengan QR invalid\"\n}"
        },
        "url": {
          "raw": "{{base_url}}/mobile/terima-tabung",
          "host": ["{{base_url}}"],
          "path": ["mobile", "terima-tabung"]
        }
      }
    }
  ]
}
